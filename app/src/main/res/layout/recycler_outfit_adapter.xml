<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view1"
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <com.example.rh.artlive.view.RoundImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/back"
                zhy:borderRadius="10dp"
                zhy:type="round" >
            </com.example.rh.artlive.view.RoundImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvCity"
            android:maxLines="1"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/image"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="分类名称"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_12"/>
        <LinearLayout
            android:id="@+id/out_two"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCityprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价："
                android:textColor="@color/black"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tvCitypricevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128.00元"
                android:textSize="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/out_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金："
                android:textSize="9dp"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/around_view_bg_color"/>

</RelativeLayout>

