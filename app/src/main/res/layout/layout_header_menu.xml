<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/adds"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_text"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/titleBar_location_lay"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:orientation="horizontal"
            android:background="@drawable/imageview_btn_selector">

            <ImageView
                android:id="@+id/titleBar_city_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:maxLines="2"
                android:src="@mipmap/main_scan"
               />

        </LinearLayout>

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_toRightOf="@+id/titleBar_location_lay"
            android:layout_toLeftOf="@+id/news"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/searchmenu"
            android:visibility="visible"
            android:background="@drawable/draw"
            android:layout_width="250dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/main_search"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/login_quick_login_et_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入关键字"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/news"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="visible"
                android:id="@+id/class_img"
                android:background="@mipmap/main_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />

        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:id="@+id/news"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
                <!--android:visibility="visible"-->
                <!--android:id="@+id/class_img"-->
                <!--android:background="@mipmap/news"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"  />-->

        <!--</LinearLayout>-->

        <TextView
            android:text="我的"
            android:textColor="@color/black"
            android:id="@+id/shop1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/showVersion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/showTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#eef2f6"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/showImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/editor"
            android:visibility="gone"
            android:textColor="@color/white_text"
            android:text=" "
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/showDrawCount"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
             />
        <TextView
            android:id="@+id/showAlarmCount"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-25dp"
            android:gravity="center"
            android:text="99+"
            android:textColor="#eef2f6"
            android:textSize="8sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/down"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/showDraw"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/backhed" />
        <TextView
            android:text="消息"
            android:textSize="20dp"
            android:id="@+id/shop"
            android:textColor="@color/white_text"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/showVersiondown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/showTitledown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#eef2f6"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/showImgdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/showSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/news" />

        <ImageView
            android:id="@+id/showTime"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/news_new"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/editordown"
            android:visibility="gone"
            android:text="编辑"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/showDrawCountdown"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/showAlarmCountdown"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-25dp"

            android:gravity="center"
            android:text="99+"
            android:textColor="#eef2f6"
            android:textSize="8sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cp_shadow"/>
</LinearLayout>