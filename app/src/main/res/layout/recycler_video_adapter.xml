<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.rh.artlive.view.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/follow_user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home"
                />
            <LinearLayout
                android:id="@+id/user_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/follow_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_title"
                    android:text="虫虫"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/data"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/follow_user_icon"
                android:layout_below="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time"
                    android:text="10月09日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="dsadasdasdsadsadasdsadsadsadasdasdasdasdasdadasdsadasdsaddasdasdasdasdasdasdsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid_layout"
            android:background="@color/background_gray1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/music_image"
                android:src="@mipmap/bofang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/music_name"
                android:text="名字"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/music_image"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <View
            android:id="@+id/view2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cp_shadow"/>

        <RelativeLayout
            android:padding="5dp"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            >



                <LinearLayout
                    android:id="@+id/left"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/moddle"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/main_share"
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="11" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/right"
                    android:id="@+id/moddle"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_news"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="评论" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_up"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="31" />
                </LinearLayout>

        </RelativeLayout>


        </LinearLayout>

</LinearLayout>