<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header_wishing"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/left"
                android:src="@drawable/wishing_left"
                android:layout_width="110dp"
                android:layout_height="90dp" />

            <RelativeLayout
                android:layout_below="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:text=""
                    style="@style/customCheckbox"
                    ></CheckBox>

                <TextView
                    android:id="@+id/text"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/cb1"
                    android:text="文曲星护法"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="10"
                    android:id="@+id/one"
                    android:textColor="@color/red"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cb"
                    android:layout_below="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/moddle"
            android:layout_toRightOf="@+id/left_layout"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/left"
                android:src="@drawable/wishing"
                android:layout_width="110dp"
                android:layout_height="90dp" />

            <RelativeLayout
                android:layout_below="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text=""
                    style="@style/customCheckbox"
                    ></CheckBox>

                <TextView
                    android:id="@+id/text1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/cb2"
                    android:text="文曲星护法"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="10"
                    android:id="@+id/two"
                    android:textColor="@color/red"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cb"
                    android:layout_below="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/moddle"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/left"
                android:src="@drawable/wishing_right"
                android:layout_width="110dp"
                android:layout_height="90dp" />

            <RelativeLayout
                android:layout_below="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="false"
                    android:text=""
                    style="@style/customCheckbox"
                    ></CheckBox>

                <TextView
                    android:id="@+id/text2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/cb3"
                    android:text="文曲星护法"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="10"
                    android:id="@+id/third"
                    android:textColor="@color/red"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cb"
                    android:layout_below="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/layout1"
            android:layout_below="@+id/left_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/school"
                android:text="目标院校"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_toRightOf="@+id/school"
                android:id="@+id/name"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                    <EditText
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:hint="请输入院校"
                        android:textColor="@color/orange"
                        android:drawableLeft="@mipmap/login_user"
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view"
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/school"
                android:text="输入心愿"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_toRightOf="@+id/school"
                android:id="@+id/name"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                    <EditText
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"
                        android:hint="请输入心愿"
                        android:textColor="@color/orange"
                        android:drawableLeft="@mipmap/login_user"
                        android:id="@+id/phone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view1"
            android:layout_below="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/school"
                android:text="支付金额"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="10"
                android:id="@+id/price"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view2"
            android:layout_below="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"/>



        <Button
            android:layout_marginTop="30dp"
            android:layout_below="@+id/view2"
            android:id="@+id/login_btn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_unlogin"
            android:text="确认支付"
            android:textColor="@color/white_text"
            />


    </RelativeLayout>

</LinearLayout>