<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/colleges_header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <com.example.rh.artlive.view.CircleImageView
            android:id="@+id/colleges_logo"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/worm_people"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/colleges_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="北京大学"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/colleges_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/colleges_name"
            android:id="@+id/colleges_class"
            android:layout_marginLeft="10dp"
            android:text="北京大学"
            android:layout_toRightOf="@+id/colleges_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/true_title"
            android:text="真题"
            android:layout_marginRight="10dp"
            android:textColor="@color/orange"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/query_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cp_shadow"/>

</LinearLayout>