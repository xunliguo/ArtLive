<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header_setting"
        android:id="@+id/top"/>

    <ScrollView
        android:layout_below="@+id/top"
        android:layout_above="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/done"
                android:layout_marginTop="10dp"
                android:background="@color/white_text"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="绑定手机号"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:id="@+id/dtwo"
                android:background="@color/white_text"
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="账号保护"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dthirds"
                android:layout_marginTop="10dp"
                android:background="@color/white_text"
                android:layout_below="@+id/dtwo"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="帮助与反馈"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/dthirds"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:id="@+id/dfour"
                android:background="@color/white_text"
                android:layout_below="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="检测新版本"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/dfour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:id="@+id/dfives"
                android:background="@color/white_text"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="清除缓存"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/crush_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="0 k"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dsixs"
                android:layout_marginTop="10dp"
                android:background="@color/white_text"
                android:layout_below="@+id/dfives"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="关于我们"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/dsixs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:id="@+id/dsevens"
                android:background="@color/white_text"
                android:layout_below="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="打分（五星好评）"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/dsevens"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:id="@+id/deitera"
                android:background="@color/white_text"
                android:layout_below="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="法律条款"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/me_item_lottery_iv_arrow_right"
                    style="@style/me_common_item_arrow_right_imageView_style" />
            </RelativeLayout>
            <View
                android:id="@+id/view5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/deitera"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_unlogin"
        android:text="退出登录"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white_text" />
</RelativeLayout>