<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.rh.artlive.view.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/follow_user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home"
                />
            <LinearLayout
                android:id="@+id/user_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/follow_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_title"
                    android:text="虫虫"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/data"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/follow_user_icon"
                android:layout_below="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time"
                    android:text="10月09日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="dsadasdasdsadsadasdsadsadsadasdasdasdasdasdadasdsadasdsaddasdasdasdasdasdasdsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!--<RelativeLayout-->
        <!--android:id="@+id/grid_layout"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
        <com.example.rh.artlive.view.NoScrollGridView
            android:id="@+id/gridView_picarr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            />
        <!--</RelativeLayout>-->

        <View
            android:id="@+id/view2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cp_shadow"/>

        <LinearLayout
            android:id="@+id/bottom_left_content"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/bottom_left"
                style="@style/me_userLayout_textView_style"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/main_share"
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_user_tv_cart2"
                style="@style/me_userLayout_textView_style"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_news"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="评论" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/me_user_tv_cart2"
                style="@style/me_userLayout_textView_style"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_up"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="31" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>