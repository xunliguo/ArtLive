<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/post_user"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/white_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.rh.artlive.view.CircleImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/follow_user_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home"
                    />
                <LinearLayout
                    android:id="@+id/user_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/follow_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_title"
                        android:text="虫虫"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/data"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/follow_user_icon"
                    android:layout_below="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/time"
                        android:text="10月09日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="dsadasdasdsadsadasdsadsadsadasdasdasdasdasdadasdsadasdsaddasdasdasdasdasdasdsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/grid_layout"
                android:background="@color/background_gray1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/music_image"
                    android:src="@mipmap/bofang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/music_name"
                    android:text="名字"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/music_image"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>


            <View
                android:id="@+id/view2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>


            <RelativeLayout
                android:id="@+id/bottom_left_content"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <!--<LinearLayout-->
                <!--android:id="@+id/bottom_left"-->
                <!--style="@style/me_userLayout_textView_style"-->
                <!--android:orientation="vertical">-->
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:id="@+id/details_left"
                    android:layout_toLeftOf="@+id/details_moddle"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/main_share"
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="13dp"
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="11" />
                </LinearLayout>
                <!--</LinearLayout>-->

                <!--<LinearLayout-->
                <!--android:id="@+id/me_user_tv_cart2"-->
                <!--style="@style/me_userLayout_textView_style"-->
                <!--android:orientation="vertical">-->
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/details_right"
                    android:id="@+id/details_moddle"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_news"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="评论" />
                </LinearLayout>
                <!--</LinearLayout>-->
                <!--<LinearLayout-->
                <!--android:id="@+id/me_user_tv_cart2"-->
                <!--style="@style/me_userLayout_textView_style"-->
                <!--android:orientation="vertical">-->
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:id="@+id/details_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content">
                    <ImageView
                        android:src="@mipmap/follow_up"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="13dp"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="31" />
                </LinearLayout>
                <!--</LinearLayout>-->
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_below="@+id/one"
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/white_text">

            <RelativeLayout
                android:id="@+id/apply_area"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="转发"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/name1_value"
                    android:textColor="@color/black"
                    android:text="11"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/name1"
                    />

                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-5dp"
                    android:id="@+id/share_view"
                    android:layout_below="@+id/name1"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:background="@color/red"/>

            </RelativeLayout>



            <TextView
                android:text="评论"
                android:id="@+id/post_details"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/apply_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="11"
                android:id="@+id/post_details_eva"
                android:layout_toRightOf="@+id/post_details"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_toLeftOf="@+id/detials_zan_value"
                android:id="@+id/details_zan"
                android:text="赞"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:id="@+id/detials_zan_value"
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <View
            android:id="@+id/bottom_view"
            android:layout_above="@+id/bottom_left_content"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cp_shadow"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/post_user"
        android:background="@color/white"
        android:id="@+id/user_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.rh.artlive.view.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/roundImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            />

        <LinearLayout
            android:id="@+id/user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/roundImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="虫虫"
                android:id="@+id/user_name_value"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/user_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/roundImageView"
            android:layout_below="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_content_value"
                android:textColor="@color/black"
                android:text="老师很棒讲的同喜通俗易懂"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/roundImageView"
            android:layout_below="@+id/user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/data_value"
                android:textSize="13dp"
                android:text="10月09日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/view10"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cp_shadow"/>
    </RelativeLayout>

    <!--</ScrollView>-->

</RelativeLayout>