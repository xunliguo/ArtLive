<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/user_image"
                    android:src="@drawable/colleges_back"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <ImageView
                    android:id="@+id/showDraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <com.example.rh.artlive.view.CircleImageView
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="-20dp"
                android:layout_above="@+id/user_info"
                android:id="@+id/roundImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_empty"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/user_info"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/roundImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="将天文"

                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_marginLeft="110dp"
                        android:id="@+id/teacher_marj"
                        android:text="将天文"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_below="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_quai_bg"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/me_user_tv_cart"
                        style="@style/me_userLayout_textView_style"
                        android:orientation="vertical">
                        <TextView
                            android:text="103"
                            android:id="@+id/diezivalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/tiezi"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="帖子" />
                        </LinearLayout>

                    </LinearLayout>

                    <View style="@style/me_vertical_view_style" />

                    <LinearLayout
                        android:id="@+id/me_user_tv_follow"
                        style="@style/me_userLayout_textView_style"
                        android:orientation="vertical">
                        <TextView
                            android:text="103"
                            android:id="@+id/guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height=  "wrap_content">

                            <ImageView
                                android:src="@mipmap/teacher_follow"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="关注"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                    </LinearLayout>
                    <View style="@style/me_vertical_view_style" />

                    <LinearLayout
                        android:id="@+id/me_user_tv_fans"
                        style="@style/me_userLayout_textView_style"
                        android:orientation="vertical">
                        <TextView
                            android:text="103"
                            android:id="@+id/fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height=  "wrap_content">

                            <ImageView
                                android:src="@mipmap/teacher_fans"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="粉丝"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/photo"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_below="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="相册"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view4"
                android:layout_below="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>



            <com.example.rh.artlive.view.NoScrollGridView
                android:id="@+id/gridView_picarr"
                android:layout_below="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="5dp"
                android:numColumns="5"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                />

            <RelativeLayout
                android:id="@+id/done"
                android:background="@color/white_text"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gridView_picarr"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mine_one"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view5"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:background="@color/white_text"
                android:id="@+id/dtwo"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/name1"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="目标院校"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mine_two"
                    android:layout_toRightOf="@+id/name1"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view6"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/dtwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:background="@color/white_text"

                android:id="@+id/dthird"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/name2"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="文化成绩"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mine_third"
                    android:layout_toRightOf="@+id/name2"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view7"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/dthird"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:background="@color/white_text"

                android:id="@+id/dfour"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/name3"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="培训经历"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mine_four"
                    android:layout_toRightOf="@+id/name3"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view8"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/dfour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>
            <RelativeLayout
                android:background="@color/white_text"

                android:id="@+id/dfive"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/name4"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="就读学校"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mine_five"
                    android:layout_toRightOf="@+id/name4"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="艺考方向"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <View
                android:id="@+id/view9"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/dfive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_shadow"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:background="@color/white_text"
        android:id="@+id/setting"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_toRightOf="@+id/bottom_left_content"
            android:id="@+id/button"
            android:background="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_user"
                android:textColor="@color/white_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已关注"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>